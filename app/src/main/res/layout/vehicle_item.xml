<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3.0"
    android:gravity="center"
    android:layout_marginVertical="10dp">

    <RelativeLayout
        android:id="@+id/account_route_info"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="3.0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_route_settings"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_verfied"/>
        <TextView
            android:id="@+id/tvPlateNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Route Information"
            android:paddingLeft="90dp"
            android:paddingTop="13dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/colorBrandPrimary"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tvColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="San Fernando City, La Union -"
            android:paddingLeft="90dp"
            android:paddingTop="38dp"
            android:fontFamily="@font/nunito_sans_regular"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            />
    </RelativeLayout>

</LinearLayout>